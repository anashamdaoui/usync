{
  "manifest_version": 3,
  "name": "USync",
  "version": "1.0.0",
  "description": "Jira and Phone Integration for Customer Support",
  "permissions": [
    "storage",
    "cookies",
    "webRequest",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "https://enreach-services.atlassian.net/*",
    "https://api.ggphone.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background/background.ts",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}